                      android:textSize="20dp"
                      android:layout_marginLeft="15dp"
                      android:id="@+id/text4"
                      android:layout_toRightOf="@+id/img2"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
